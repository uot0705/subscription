<%= render "shared/header" %>

<div class="content-form">


  <h2 class="views-title">サブスク登録</h2>
  <%= form_with model: @content,  local: true do |f| %>
 <%= render 'shared/error_messages', model: f.object %>
    <div class="card">
     <%# 金額 %>
     <div class="card__imgframe">
       <div class="price-content">
         <div class="price-text">
            <span>Price</span>
          </div>
          <div>
            <span class="sell-yen">¥</span>
            <%= f.text_field :price,   placeholder:"例）300" %>
          </div>
        </div>
      </div>
      <%# 金額 %>
    
    <%# TITLE %>
    <div class="card__textbox">
      <div class="card__overviewtext">
       <h2>Title</h2>
      </div>
      <%= f.text_field :name, class:"card__titletext",  placeholder:"商品名（必須 20文字まで)", maxlength:"20" %>
    </div>

    <%# 画像 %>
    <div class="card__textbox">
      <div class="card__overviewtext">
       <h2>Icon Image</h2>
      </div>
     <%= f.file_field :image, class:"card__titletext"  %>
    </div>

    <%# 下部ボタン %>
     <div class="card__textbox">
      <%= f.submit "add" ,class:"sell-btn" %>
      <%=link_to '戻る', root_path, class:"back-btn" %>
     </div>
    <%# /下部ボタン %>

  <% end %>

 </div>
</div>